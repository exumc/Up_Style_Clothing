<body>
    <nav class="white">
        <div class="container">
            <div class="row">
                <div class="col s12 m3">
                    <img src="./images/logo.svg" class="logo-img">

                </div>
                <div class="col s12 m9">
                    <div class="right">
                        <ul>
                            {{!-- {{#if loggedIn}}
